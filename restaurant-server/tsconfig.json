{
    "compilerOptions": {
      "target": "es6",
      "skipLibCheck": true,
      "module": "commonjs",
      "lib": [
        "es5",
        "es6",
        "esnext"
      ],
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/", "src/types/*"]
      },
      "sourceMap": true,
      "outDir": "./build",
      "strict": true,
      "noImplicitAny": false,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "exclude": ["__tests__"],
    "include": ["src/**/*"]
  }
  